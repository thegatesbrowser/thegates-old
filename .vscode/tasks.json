{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": "build",
            "type": "shell",
            "command": "scons",
            "args": [
              "-j", "$(nproc)", "dev_build=yes", "the_gates_sandbox=yes"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build linux (template_debug)",
            "group": "build",
            "type": "shell",
            "command": "scons",
            "args": [
              "-j", "$(nproc)", "platform=linuxbsd", "tools=no", "target=template_debug", "use_lto=yes"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build windows (template_debug)",
            "group": "build",
            "type": "shell",
            "command": "scons",
            "args": [
              "-j", "$(nproc)", "platform=windows", "tools=no", "target=template_debug", "use_lto=yes"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build macOS (template_debug)",
            "group": "build",
            "type": "shell",
            "command": "scons",
            "args": [
              "-j", "$(nproc)", "platform=macos", "osxcross_sdk=darwin21.4", "use_volk=yes",
              "tools=no", "target=template_debug"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
